<div class="container booking">

  <% if @bookings.empty? %>
    <div class="non-booking">
      <h1>You don't have any booking</h1>
      <%= link_to "choose a unicorn to book now", unicorns_path %>
    </div>
  <% else %>
    <h1 class="text-center">Your bookings of Unicorns</h1>
  <% end %>
  <div class="booking-list">
    <ul>
      <% @bookings.each do |booking| %>
        <li>
          <div class="booking-info">
            <p><%=link_to booking.unicorn.name, unicorn_path(booking.unicorn) %> </p>
            <p> from <%= booking.start_date %> to <%= booking.end_date %> </p>
            <p> <%= booking.number_of_days %> days for a total of <%= booking.total_price %> â‚¬ </p>
            <div class="delete">
              <p><%= link_to "Cancel booking",
              booking_path(booking),
              data: {turbo_method: :delete, turbo_confirm: "Delete reservation ?"}
              %></p>
            </div>
          </div>
        </li>
        <% end %>
    </ul>
  </div>

</div>
